# Multi-Controller Guest WiFi Configuration
# Copy this to multi_controllers.yaml and update with your controller details

controllers:
  - name: "Building A Controller"
    ip: "192.168.1.100"
    username: "admin"
    password: "your_password_here"
    
  - name: "Building B Controller"  
    ip: "192.168.2.100"
    username: "admin"
    password: "your_password_here"
    
  - name: "Data Center Controller"
    ip: "10.10.10.50"
    username: "admin"
    password: "your_password_here"
    
  # Add more controllers as needed
  # - name: "Branch Office"
  #   ip: "172.16.1.10"
  #   username: "admin"
  #   password: "your_password_here"

guest_wifi:
  # The exact SSID name for guest WiFi (case sensitive)
  ssid_name: "Guest-WiFi"
  
  # Password generation options
  password_length: 12
  password_options:
    include_uppercase: true
    include_lowercase: true
    include_digits: true
    include_special: false      # Set to true if you want special characters
    exclude_ambiguous: true     # Excludes confusing characters like 0,O,l,1
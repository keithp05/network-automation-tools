# Server Configuration
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/greenhouse_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=greenhouse_db
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Camera/Monitoring Configuration
CAMERA_CAPTURE_INTERVAL=60
CAMERA_STORAGE_PATH=/uploads/images
VIDEO_STORAGE_PATH=/uploads/videos

# Alert Configuration
ALERT_EMAIL_ENABLED=true
ALERT_SMS_ENABLED=false
ALERT_WEBHOOK_URL=

# MQTT Configuration (for IoT sensors)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=greenhouse
MQTT_PASSWORD=secure_password

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_VIDEO_TYPES=mp4,avi,mov

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key

# API Keys
WEATHER_API_KEY=your_weather_api_key
PLANT_IDENTIFICATION_API_KEY=your_plant_id_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/greenhouse.log